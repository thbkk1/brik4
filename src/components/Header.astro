---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<button class="hamburger" aria-label="Toggle navigation" onclick="toggleNav()">
			<span></span><span></span><span></span>
		</button>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/services">Services</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="/contact">Contact</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://github.com/thbkk1/" target="_blank">
				<span class="sr-only">Go to Astro's GitHub repo</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
					><path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					></path></svg
				>
			</a>
			<a href="https://www.linkedin.com/in/eduardvanderwesthuizen/" target="_blank">
				<span class="sr-only">Go to LinkedIn profile</span>
				<svg viewBox="0 0 24 24" aria-hidden="true" width="32" height="32">
					<path
						fill="currentColor"
						d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
					/>
				</svg>
			</a>
		</div>
	</nav>
</header>
<script is:inline>
let navOpen = false;
function toggleNav() {
	navOpen = !navOpen;
	document.querySelector('.internal-links').classList.toggle('open', navOpen);
	document.querySelector('.hamburger').classList.toggle('open', navOpen);
}
if (typeof window !== 'undefined') {
	window.toggleNav = toggleNav;
}
</script>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		position: relative;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	.hamburger {
		display: none;
		position: absolute;
		right: 1em;
		top: 10px;
		z-index: 1100;
	}
	.hamburger span {
		display: block;
		width: 28px;
		height: 4px;
		margin: 4px 0;
		background: #2c3e50;
		border-radius: 2px;
		transition: 0.3s;
	}
	.hamburger.open span:nth-child(1) {
		transform: translateY(8px) rotate(45deg);
	}
	.hamburger.open span:nth-child(2) {
		opacity: 0;
	}
	.hamburger.open span:nth-child(3) {
		transform: translateY(-8px) rotate(-45deg);
	}
	.internal-links {
		display: flex;
		gap: 1em;
		transition: max-height 0.3s, opacity 0.3s;
	}
	@media (max-width: 900px) {
		nav {
			flex-wrap: wrap;
		}
		.internal-links {
			gap: 0.5em;
		}
	}
	@media (max-width: 720px) {
		.hamburger {
			display: flex;
			position: absolute;
			right: 1em;
			top: 10px;
			z-index: 1100;
		}
		.internal-links {
			position: absolute;
			top: 60px;
			left: 0;
			right: 0;
			width: 100vw;
			box-sizing: border-box;
			background: white;
			flex-direction: column;
			align-items: center;
			max-height: 0;
			overflow: hidden;
			opacity: 0;
			pointer-events: none;
			z-index: 1000;
			margin: 0;
			padding: 0;
		}
		.internal-links.open {
			max-height: 400px;
			opacity: 1;
			pointer-events: auto;
			box-shadow: 0 2px 8px rgba(0,0,0,0.1);
		}
		.internal-links a {
			padding: 1em 0;
			width: 100%;
			text-align: center;
			border-bottom: 1px solid #eee;
			box-sizing: border-box;
			margin: 0;
		}
		.social-links {
			display: none;
		}
	}
</style>
