<script is:inline>
document.addEventListener('DOMContentLoaded', function () {
	const hamburger = document.querySelector('.hamburger');
	const menu = document.querySelector('.internal-links');
	if (!hamburger || !menu) return;
	hamburger.addEventListener('click', function () {
		const isOpen = menu.classList.toggle('open');
		hamburger.classList.toggle('open', isOpen);
		if (isOpen) {
			menu.style.zIndex = '2000';
		} else {
			menu.style.zIndex = '';
		}
	});
	// Close menu when a link is clicked (mobile only)
	menu.querySelectorAll('a').forEach(link => {
		link.addEventListener('click', () => {
			if (window.innerWidth <= 720) {
				menu.classList.remove('open');
				hamburger.classList.remove('open');
				menu.style.zIndex = '';
			}
		});
	});
});
// Jump to top button logic
window.addEventListener('scroll', function () {
	const btn = document.getElementById('jumpToTop');
	if (!btn) return;
	if (window.scrollY > 120 && window.innerWidth <= 720) {
		btn.style.display = 'block';
	} else {
		btn.style.display = 'none';
	}
});
document.getElementById('jumpToTop')?.addEventListener('click', function () {
	window.scrollTo({ top: 0, behavior: 'smooth' });
});
</script>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: transparent !important;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		position: relative;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	.hamburger {
		display: none;
		position: fixed;
		right: 1em;
		top: 10px;
		z-index: 2100;
		background: rgba(255,255,255,0.35);
		backdrop-filter: blur(8px);
		border: 1.5px solid rgba(200,200,200,0.4);
		border-radius: 12px;
		box-shadow: 0 4px 24px 0 rgba(0,0,0,0.10);
		flex-direction: column;
		justify-content: center;
		align-items: center;
		transition: background 0.2s, border 0.2s;
	}
	.hamburger:hover {
		background: rgba(255,255,255,0.55);
		border: 1.5px solid rgba(120,120,120,0.25);
	}
	.hamburger span {
		display: block;
		width: 28px;
		height: 4px;
		margin: 4px 0;
		background: #2c3e50;
		border-radius: 2px;
		transition: 0.3s;
	}
	.hamburger.open span:nth-child(1) {
		transform: translateY(8px) rotate(45deg);
	}
	.hamburger.open span:nth-child(2) {
		opacity: 0;
	}
	.hamburger.open span:nth-child(3) {
		transform: translateY(-8px) rotate(-45deg);
	}
	.internal-links {
		display: flex;
		gap: 1em;
		transition: max-height 0.3s, opacity 0.3s;
	}
	@media (max-width: 900px) {
		nav {
			flex-wrap: wrap;
		}
		.internal-links {
			gap: 0.5em;
		}
	}
	@media (max-width: 720px) {
		.hamburger {
			display: flex;
			position: fixed;
			right: 1em;
			top: 10px;
			z-index: 2100;
			background: rgba(255,255,255,0.35);
			backdrop-filter: blur(8px);
			border: 1.5px solid rgba(200,200,200,0.4);
			border-radius: 12px;
			box-shadow: 0 4px 24px 0 rgba(0,0,0,0.10);
			flex-direction: column;
			justify-content: center;
			align-items: center;
			transition: background 0.2s, border 0.2s;
		}
		.hamburger:hover {
			background: rgba(255,255,255,0.55);
			border: 1.5px solid rgba(120,120,120,0.25);
		}
		.internal-links {
			position: fixed;
			top: 0;
			left: 0;
			right: 0;
			width: 100vw;
			height: 100vh;
			box-sizing: border-box;
			background: white;
			flex-direction: column;
			align-items: center;
			justify-content: center;
			max-height: 0;
			overflow: hidden;
			opacity: 0;
			pointer-events: none;
			z-index: 2000;
			margin: 0;
			padding: 0;
			transition: max-height 0.3s, opacity 0.3s;
		}
		.internal-links.open {
			max-height: 100vh;
			opacity: 1;
			pointer-events: auto;
			box-shadow: 0 2px 8px rgba(0,0,0,0.1);
		}
		.internal-links a {
			padding: 1.2em 0;
			width: 100%;
			text-align: center;
			box-sizing: border-box;
			margin: 0;
			font-size: 1.2em;
		}
		.social-links {
			display: none;
		}
		#jumpToTop {
			position: fixed;
			right: 1.2em;
			bottom: 1.2em;
			z-index: 2200;
			background: rgba(255,255,255,0.35);
			backdrop-filter: blur(8px);
			color: #2c3e50;
			border: 1.5px solid rgba(200,200,200,0.4);
			border-radius: 50%;
			width: 48px;
			height: 48px;
			font-size: 2em;
			box-shadow: 0 4px 24px 0 rgba(0,0,0,0.10);
			display: none;
			display: flex;
			align-items: center;
			justify-content: center;
			cursor: pointer;
			transition: background 0.2s, border 0.2s;
			padding: 0;
			line-height: 1;
		}
		#jumpToTop:hover {
			background: rgba(255,255,255,0.55);
			border: 1.5px solid rgba(120,120,120,0.25);
			color: #2c3e50;
		}
		.internal-links.open a.active {
			border-bottom: none !important;
		}
	}
</style>
