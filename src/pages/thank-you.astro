---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Thank You - ${SITE_TITLE}`} description="Thank you for contacting Brik4mation." />
  </head>
  <body>
    <Header />
    <main>
      <div class="hero-section">
        <div class="hero-content">
          <h1>Thank You!</h1>
          <p>Your message has been sent successfully.<br>
          We appreciate your interest and will get back to you as soon as possible.</p>
        </div>
      </div>
    </main>
    <Footer />
  </body>
</html>
<style>
.hero-section,
.hero-content {
  width: 100%;
  box-sizing: border-box;
}
.hero-section {
  padding: 4rem 2rem;
  text-align: center;
  color: inherit;
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
}
.hero-content {
  max-width: 800px;
  margin: 0 auto;
}
.hero-section h1 {
  font-size: 3rem;
  margin-bottom: 1.5rem;
  font-weight: 700;
  color: #2c3e50;
}
.hero-section p {
  font-size: 1.2rem;
  line-height: 1.6;
  color: #34495e;
  margin: 0;
}
@media (max-width: 768px) {
  .hero-section {
    padding: 2rem 1rem;
  }
  .hero-section h1 {
    font-size: 2rem;
  }
  .hero-section p {
    font-size: 0.9rem;
    line-height: 1.5;
    padding: 0 0.5rem;
  }
}
@media (max-width: 480px) {
  .hero-section {
    padding: 1rem 0.5rem;
  }
  .hero-section h1 {
    font-size: 1.3rem;
    word-break: break-word;
  }
  .hero-section p {
    font-size: 0.8rem;
    padding: 0 0.2rem;
    word-break: break-word;
  }
}
</style> 