---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CertificationCarousel from '../components/CertificationCarousel.astro';
import TechnologyCarousel from '../components/TechnologyCarousel.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section class="hero-section">
				<div class="hero-content">
					<h1>Purpose-Built Solutions for Digital Transformation</h1>
					<p class="hero-subhead">
						We help you automate, integrate, and optimize your business processes for scalable growth.
					</p>
					<a href="/contact" class="cta-btn">Talk to Us</a>
					<div class="trusted-by">
						<span>Trusted by:</span>
						<img src="/technologies/aws.svg" alt="AWS" height="32" />
						<img src="/technologies/siemens.svg" alt="Siemens" height="32" />
						<img src="/technologies/mendix.svg" alt="Mendix" height="32" />
						<img src="/technologies/ignition.svg" alt="Ignition" height="32" />
						<img src="/certifications/pmp.png" alt="PMI" height="32" />
					</div>
				</div>
			</section>
			
			<CertificationCarousel />
			<TechnologyCarousel />
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		margin: 0;
		padding: 0;
		width: 100%;
		max-width: 100%;
	}

	.hero-section,
	.hero-content {
		width: 100%;
		box-sizing: border-box;
	}

	.hero-section {
		margin-top: 2.5rem;
		padding: 5rem 2rem 3rem 2rem;
		text-align: center;
		color: inherit;
		width: 100%;
		max-width: 1200px;
		margin-left: auto;
		margin-right: auto;
		position: relative;
		overflow: hidden;
		background: linear-gradient(120deg, #e0eafc 0%, #a1c4fd 60%, #c2e9fb 100%, #7f7fd5 100%);
		border-radius: 2rem;
		box-shadow: 0 8px 32px 0 rgba(34,41,57,0.08);
	}

	.hero-content {
		max-width: 700px;
		margin: 0 auto;
		position: relative;
		z-index: 1;
	}

	.hero-section h1 {
		font-size: 2.8rem;
		margin-bottom: 1.2rem;
		font-weight: 700;
		color: var(--primary-text);
		letter-spacing: -0.02em;
	}

	.hero-subhead {
		font-size: 1.3rem;
		color: var(--secondary-text);
		margin-bottom: 2.2rem;
		font-weight: 400;
	}

	.cta-btn {
		display: inline-block;
		background: var(--accent);
		color: #fff;
		padding: 1em 2.5em;
		border-radius: 10px;
		font-size: 1.2em;
		font-weight: 700;
		text-decoration: none;
		box-shadow: 0 4px 24px 0 rgba(34,41,57,0.10);
		transition: background 0.2s, box-shadow 0.2s;
		margin-bottom: 2.5rem;
	}

	.cta-btn:hover {
		background: var(--accent-dark);
		box-shadow: 0 8px 32px 0 rgba(34,41,57,0.13);
	}

	.trusted-by {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 1.5rem;
		margin-top: 1.5rem;
		font-size: 1rem;
		color: var(--secondary-text);
		opacity: 0.85;
		flex-wrap: wrap;
	}

	.trusted-by img {
		height: 32px;
		width: auto;
		filter: grayscale(1) contrast(1.1);
		opacity: 0.8;
		transition: filter 0.2s, opacity 0.2s;
	}

	.trusted-by img:hover {
		filter: grayscale(0) contrast(1.2);
		opacity: 1;
	}

	@media (max-width: 768px) {
		.hero-section {
			padding: 2.5rem 0.5rem 2rem 0.5rem;
			border-radius: 1.2rem;
		}
		.hero-section h1 {
			font-size: 2rem;
		}
		.hero-subhead {
			font-size: 1rem;
		}
		.cta-btn {
			font-size: 1em;
			padding: 0.8em 1.5em;
		}
		.trusted-by {
			gap: 1rem;
			font-size: 0.95rem;
		}
		.trusted-by img {
			height: 24px;
		}
	}

	@media (max-width: 480px) {
		.hero-section {
			padding: 1rem 0.5rem;
		}
		.hero-section h1 {
			font-size: 1.3rem;
			word-break: break-word;
		}
		.hero-section p {
			font-size: 0.8rem;
			padding: 0 0.2rem;
			word-break: break-word;
		}
	}
</style>
